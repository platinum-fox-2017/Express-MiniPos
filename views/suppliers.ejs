<html>
  <head>
    <title>
      Mini Post of Sales
    </title>
  </head>
  <body>
    <nav>
      <button type="button" onclick="location.href='/'">Home</button>
      <button type="button" onclick="location.href='/items'">Items</button>
      <button type="button" onclick="location.href='/suppliers'">Suppliers</button>
      <button type="button" onclick="location.href='/search'">Search</button>
    </nav>
    <h2>List Suppliers</h2>
    <button type="button" onclick="location.href='/suppliers/add'">Add New Supplier</button>
    <table>
      <thead>
        <th>No</th>
        <th>ID</th>
        <th>Name</th>
        <th>Kota</th>
        <th>List Item</th>
        <th>Add Item</th>
        <th>Action</th>
      </thead>
      <tbody>
        <%suppliers.forEach((supplier,i)=>{%>
        <tr>
          <td><%= i+1%></td>
          <td><%= supplier.id%></td>
          <td><%= supplier.name%></td>
          <td><%= supplier.kota%></td>
          <td>
            <% supplier.Items.forEach((item)=>{%>
            <ul>
              <li><%= item.getItemBrand()%> @ <%= helper.formatUang(item.SupplierItem.price)%></li>
            </ul>
            <%})%>
          </td>
          <td><a href="/suppliers/<%= supplier.id %>/additem">Assign Items</a></td>
          <td>
            <a href="/suppliers/edit/<%= supplier.id %>"></span>edit</a>
            <a href="/suppliers/delete/<%= supplier.id %>"onclick="return confirm('Are you sure you want to delete:\n<%= supplier.name %>\n')"></span>delete</a>
          </td>
        </tr>
        <%})%>
      </tbody>
    </table>
  </body>
</html>