<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Item</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <h2>Item</h2>
    <a href="/items/add">Add Item</a>
    <br><br>
    <table border="1">
        <thead>
            <tr>
                <td>Name</td>
                <td>Brand</td>
                <td>Code Item</td>
                <td>List Supplier</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>

            <% data.map(val => { %>
                <tr>
                    <td><%=val.name%></td>
                    <td><%=val.brand%></td>
                    <td><%=val.codeitem%></td>
                    <td>
                        <% convConj.map(list => { %>
                            <% if (val.id == list.ItemId) { %>
                                <li><%= list.Supplier.name %> @ <%= helper(list.price) %></li>
                            <% } %>
                        <% }) %>
                    </td>
                    <td>
                        <a href="/items/edit/<%=val.id%>">Edit</a>
                        <a href="/items/delete/<%=val.id%>">Delete</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
            
</body>
</html>