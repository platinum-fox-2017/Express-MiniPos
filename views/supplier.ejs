<html>
  <head>
    <meta charset="utf-8"
    <title></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>
  <body>
    <div class="container">
    <center>
      <h1>List Supplier</h1>
      <a href="/suppliers/add" class="btn btn-success">add Supplier</a>
    </center>

    <br>
    <br>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Id</th>
            <th>Nama</th>
            <th>Kota</th>
            <th>List Item</th>
            <th>Add Item</th>
            <th>Actions</th>
          </thead>
          <tbody>
            <%data_supplier.forEach((data ,i) =>{%>
              <tr>
                <td><%=i+1%></td>
                <td><%=data.name%></td>
                <td><%=data.kota%></td>
                  <%if (data.Items.length > 0) { %>
                    <td><%data.Items.forEach((data1,i) => {%>
                      <%=i+1+ '. ' + data1.name%></br>
                    <%})%></td>
                  <% } else { %>
                    <td>No Item Yet</td>
                  <% } %>
                <td>
                  <a href="/suppliers/<%=data.id%>/additem " class="btn btn-primary">Assign Item</a>
                </td>
                <td>
                  <a href="/suppliers/edit/<%=data.id%>" class="btn btn-info">Edit</a>
                  <a href="/suppliers/delete/<%=data.id%>" class="btn btn-danger">Delete</a>
                </td>
              </tr>
              <%})%>
            </tbody>
    </div>
    </table>
  </body>
</html>
