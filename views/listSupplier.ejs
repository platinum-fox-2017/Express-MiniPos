<!-- views/listSupplier.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./head %>
</head>
<body class="container">

<header>
    <% include ./header %>
</header>

<main>
    <div class="jumbotron">
        <h2>List Suppliers</h2>
        <table border='1' style="width:30%">
            <tr>
                <!-- <% console.log(suppliers[0].Items[0].SupplierItem.price) %> -->
              <td><b>No.</b></td>
              <td><b>Supplier Name</b></td>
              <td><b>Kota</b></td>
              <td><b>List Product</b></td>
              <td colspan=3><center><b>Action</b></center></td>
            </tr>
                <% let no=1 %>
                <% suppliers.forEach(dataSpl => { %>
            <tr>
              <td><%= no++ %></td>
              <td><%= dataSpl.name %></td>
              <td><%= dataSpl.kota %></td>
              <% if(dataSpl.Items.length > 0) { %>
                <td>
                    <% dataSpl.Items.forEach(function(list){ %>
                            <li><%= list.brand+' '+list.name +'@ '+ helpers.formatuang(list.SupplierItem.price) %></li>
                    <%  }) %>
                </td>
                
              <% } else { %>
                
                    <td>Not Item Yet</td>
                    
                
             <% } %>
             <!-- <td><%=helpers.formatuang(10000)  %></td>> -->
              <td><a href="/suppliers/<%= dataSpl.id %>/additem">Add Item</a></td>
              <td><a href="/suppliers/edit/<%= dataSpl.id %>">Edit</a></td>
              <td><a href="/suppliers/delete/<%= dataSpl.id %>" onclick="return confirm('delete this supplier ?');">Delete</a></td>
            </tr>
          <% }) %>
    </table>
    </div>
    <table>
        <tr>
            <td>
                <form action="/suppliers/add">
                    <input type="submit" value="Add Supplier" id="bold" />
                </form>
            </td>
            <td>
                <form action="/home">
                    <input type="submit" value="Back" />
                </form>
            </td>
        </tr>
    </table>
    
    
   
</main>

<footer>
    <% include ./footer %>
</footer>

</body>
</html>
