        <h5><a href = "/item"> Back To Item List </a></h5>
        <p style = "color:red"> Item gagal terupdate !! <p>
        <p style = "color:red"> <%= err.errors[0].message %> <p>
    <%}else{%>
    <form class = "" action="/item/edit/<%=data.id%>" method = "post">
        <p>Product Name</p>
        <input type = "text" placeholder = "product name" name = "name" value ="<%=data.name%>">
        </br>
        </br>
        <p>Brand</p>  
        <input type = "text" placeholder = "brand" name = "brand" value ="<%=data.brand%>" >
        </br>
        </br>
        <p>Code Item</p>
        <input type = "text" placeholder = "code item" name = "codeitem" value ="<%=data.codeitem%>" >
        </br>
        </br>
        <button> Submit Data </button>  
    </form>
    <%}%>
    <center>
</body>
</html>