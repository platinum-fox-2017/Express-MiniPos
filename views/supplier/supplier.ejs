<html>
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" type="text/css" href="/styles/css.css">
  <title><%= title %></title>
</head>

<body>
  <%- include('../partial/navigation.ejs') %>
  <div class="main">
    <div class="content">
      <h1><%= header %></h1>
      <a href="/suppliers/add">
        <button type="button" name="button">
          Add Suppler
        </button>
      </a>
      <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Kota</th>
            <th>List Barang</th>
            <th>add Item</th>
            <th>Actions</th>
        </tr>
        <!-- loop -->
        <% for (let i = 0; i < foundSuppliers.length; i++) { %>
          <tr>
            <td><%= foundSuppliers[i].id %></td>
            <td><%= foundSuppliers[i].name %></td>
            <td><%= foundSuppliers[i].kota %></td>
            <td>
              <ul>
                <% for (let j = 0; j < foundSuppliers[i].Items.length; j++) { %>
                  <li><%= foundSuppliers[i].Items[j].name %> @: <%= helper.formatuang(foundSuppliers[i].SupplierItems[j].price) %></li>
                <% } %>
              </ul>
            </td>

              <td>
                <a href="/suppliers/additem/<%= foundSuppliers[i].id %>">
                  Assign Item
                </a>
              </td>

            <!-- edit/delete -->
            <td>
              <a href="/suppliers/edit/<%= foundSuppliers[i].id %>">
                <button type="button" name="button" >
                  edit
                </button>
              </a>
              /
              <a href="/suppliers/delete/<%= foundSuppliers[i].id   %>" >
                <button type="button" name="button" onclick="deleteConfirm()">
                  delete
                </button>
              </a>
            </td>
          </tr>
        <% } %>
        <script type="text/javascript">
          function deleteConfirm(){
            confirm('Deleting this data. Is this okay?');
          }
        </script>
      </table>
    </div>
  </div>

</body>

</html>
