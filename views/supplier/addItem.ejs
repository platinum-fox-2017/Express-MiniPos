<%include ../index%>
<container>
  <center>
    <table>
      <tbody>
        <tr>
          <td>Name</td>
          <td>&nbsp;:&nbsp;</td>
          <td><%=supplier.name%></td>
        </tr>
        <tr>
          <td>City</td>
          <td>&nbsp;:&nbsp;</td>
          <td><%=supplier.kota%></td>
        </tr>
        <tr>
          <td>Address</td>
          <td>&nbsp;:&nbsp;</td>
          <td></td>
        </tr>
        <tr>
          <td>List Item</td>
          <td>&nbsp;:&nbsp;</td>
          <% if (supplier.Items.length === 0){%>
          <td>no item yet</td>
          <%}else{%>
          <td>
            <ul>
              <%supplier.Items.forEach(data=>{%>
              <li><%=data.name%> &nbsp;&nbsp;@<%=data.SupplierItem.format_Uang()%></li>
              <%})%>
            </ul>
          </td>
          <%}%>
        </tr>
        <tr>
          <td></td>
          <td>&nbsp;&nbsp;</td>
          <td></td>
        </tr>
        <tr>
          <td>Item List</td>
          <td>&nbsp;&nbsp;</td>
          <td>Price</td>
        </tr>
        <form action="/suppliers/<%=supplier.id%>/addItem" method="post">
          <tr>
            <td>
              <select name ='ItemId'>
                <%item.forEach(data=>{%>
                <option value="<%=data.id%>"><%=data.name%></option>
                <%})%>
              </select>
            </td>
            <td>&nbsp;&nbsp;</td>
            <td><input type="number" name="price"></td>
          </tr>
          <tr>
            <td></td>
            <td></td>
            <td><button>Assign Item</button></td>
          </tr>
        </form>
      </tbody>
    </table>
  </center>
</container>

