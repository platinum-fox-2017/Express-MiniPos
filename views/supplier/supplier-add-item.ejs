<!doctype html>

<head>
  <meta charset="utf-8">
  <title>Mini Point of Sales</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
 <body>
     <%- include('../partials/menu.ejs') %>
     <h1>Add Item for Supplier</h1>
     <table>
        <tr>
            <th>Name</th>
            <td><%=supplier.name%></td>
        </tr>
        <tr>
            <th>City</th>
            <td><%=supplier.kota%></td>
        </tr>
        <tr>
            <th>Address</th>
            <td> </td>
        </tr>
        <tr>
            <th>List Item</th>
        </tr>
            <% for(let i =0; i < supplier.Items.length; i++) { %>
                <tr>
                    <td><%=supplier.Items[i].brand%> <%=supplier.Items[i].name%></td>
                    <td>@ <%=supplier.Items[i].SupplierItem.price%></td>
                </tr>
            <% } %>
     </table>
     <table>
         <tr>
             <th>List Item</th>
             <th>Price</th>
         </tr>
             <form action='/suppliers/<%=supplier.id%>/additem' method='post'>
                 <tr>
             <td>
                     <select name='ItemId'>
                         <% for(let i = 0; i < items.length; i++){%>
                             <option value = "<%=items[i].id%>"><%=items[i].brand%> <%=items[i].name%></option>
                         <%}%>
                    </select><br>
                </td>
                <td>
                    <input type='text' name="price">
                </td>
            </tr>

                <tr>
                    <td><input type='submit' value = 'Add Item'></td>
                </tr>
            </form>

    </table>


 </body>
