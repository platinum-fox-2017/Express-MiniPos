<html>
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" type="text/css" href="/styles/css.css">
  <title><%= title %></title>
</head>

<body>
  <%- include('../partial/navigation.ejs') %>
  <div class="main">
    <div class="content">
      <h1><%= header %></h1>
      <% if (err) { %>
        <h4><%= err.message %><h4>
      <% } %>
      <div class="">
        <p>NAME : <%= supplierData.name %></p><br>
        <p>kota : <%= supplierData.kota %></p><br>
        <p>Items :</p><br>
        <ul>
          <% for ( let i = 0; i < supplierData.items.length; i++ ) {%>
            <li><%= supplierData.items[i].name %>    Price: <%= helper.formatuang(supplierData.SupplierItems[i].price) %></li>
          <% } %>
        </ul>
        <br>
      </div>
      <form action="/suppliers/additem/<%= supplierData.id %>" method="post">
        SupplierId:<br>
        <input type="text" name="SupplierId" value="<%= supplierData.id %>" readonly>
        <br>
        List Item:<br>
        <select name="ItemId">
          <% for ( let i = 0; i < ItemsData.length; i++ ) {%>
            <option name="selected" value="<%= ItemsData[i].id %>"> <%=ItemsData[i].name %> </option>
          <% } %>
        </select>
        <br>
        Price:<br>
        <input type="number" name="price" value=""><br>
        <br>
        <input type="submit" value="Submit">
      </form>
    </div>
  </div>

</body>

</html>
