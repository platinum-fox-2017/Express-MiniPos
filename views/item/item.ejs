<html>
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" type="text/css" href="/styles/css.css">
  <title><%= title %></title>
</head>

<body>
  <%- include('../partial/navigation.ejs') %>
  <div class="main">
    <div class="content">
      <h1><%= header %></h1>
      <a href="/items/add">
        <button type="button" name="button">
          Add Item
        </button>
      </a>
      <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Brand</th>
            <th>Code Item</th>
            <th>List Supplier</th>
            <th>Actions</th>
        </tr>
        <!-- loop -->
        <% for (let i = 0; i < foundItems.length; i++) { %>
          <tr>
            <td><%= foundItems[i].id %></td>
            <td><%= foundItems[i].name %></td>
            <td><%= foundItems[i].brand %></td>
            <td><%= foundItems[i].codeitem %></td>
            <td>
              list supplier
            </td>
            <!-- edit/delete -->
            <td>
              <a href="/items/edit/<%= foundItems[i].id %>">
                <button type="button" name="button" >
                  edit
                </button>
              </a>
              /
              <a href="/items/delete/<%= foundItems[i].id   %>" >
                <button type="button" name="button" onclick="deleteConfirm()">
                  delete
                </button>
              </a>
            </td>
          </tr>
        <% } %>
        <script type="text/javascript">
          function deleteConfirm(){
            confirm('Deleting this data. Is this okay?');
          }
        </script>
      </table>
    </div>
  </div>

</body>

</html>
